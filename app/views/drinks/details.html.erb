
<!-- app/views/drinks/details.html.erb -->
<div class="container mt-5">
  <% if @drink %>
    <div class="card">
      <div class="card-body">
        <h1 class="text-center mb-4"><%= @drink["strDrink"] %></h1>
        <div class="text-center">
          <%= image_tag @drink["strDrinkThumb"], alt: @drink["strDrink"], class: "img-fluid rounded", style: "max-width: 200px;" if @drink["strDrinkThumb"] %>
        </div>
        <div class="mt-4">
          <p><strong>Category:</strong> <%= @drink["strCategory"] %></p>
          <p><strong>Alcoholic:</strong> <%= @drink["strAlcoholic"] %></p>
          <p><strong>Glass:</strong> <%= @drink["strGlass"] %></p>
          <p><strong>Instructions:</strong> <%= @drink["strInstructions"] %></p>
          <p><strong>Ingredients:</strong></p>
          <ul>
            <% (1..15).each do |i| %>
              <% ingredient = @drink["strIngredient#{i}"] %>
              <% measure = @drink["strMeasure#{i}"] %>
              <% if ingredient.present? %>
                <li><%= measure %> <%= ingredient %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
        <div class="text-center mt-4">
          <%= link_to "Back to Drinks", drinks_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% else %>
    <p class="text-center">Drink not found.</p>
  <% end %>
</div>